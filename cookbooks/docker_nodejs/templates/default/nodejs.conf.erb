server {
  listen 8081;
  server_name <%= @server_name %>;

  location / {
    proxy_pass http://<%= @nodejs_hostname %>:3000;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;

    access_log /var/log/engineyard/nginx/nodejs.access.log main;
    error_log /var/log/engineyard/nginx/nodejs.error.log notice;
  }
}
